<% content_for :title do %><%= t('coronavirus_form.offer_community_support.title') %><% end %>
 <% content_for :meta_tags do %>
   <meta name="description" content="<%= t('coronavirus_form.offer_community_support.title') %>" />
 <% end %>

 <% content_for :back_link do %>
   <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
 <% end %>

 <%= render "coronavirus_form/validation_error" %>
 <%= form_tag({},
   "data-module": "track-coronavirus-form-offer-community-support",
   "data-question-key": "offer_community_support",
   "id": "offer_community_support"
 ) do %>
 <%= render "govuk_publishing_components/components/radio", {
   heading: t('coronavirus_form.offer_community_support.title'),
   is_page_heading: true,
   name: "offer_community_support",
   items: t('coronavirus_form.offer_community_support.options').map do |_, item|
     {
       value: item[:label],
       text: item[:label],
       checked: session[:offer_community_support] == item[:label],
     }
   end
 } %>
 <%= render "govuk_publishing_components/components/button", text: "Save and continue", margin_bottom: true %>
 <% end %>
