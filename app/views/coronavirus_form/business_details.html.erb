<% content_for :title do %><%= t('coronavirus_form.business_details.title') %><% end %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= t('coronavirus_form.business_details.title') %>" />
<% end %>

<% content_for :back_link do %>
  <%= render "govuk_publishing_components/components/back_link", { href: previous_path } %>
<% end %>

<%= form_tag({},
  "data-module": "track-coronavirus-form-business-business-details",
  "data-question-key": "business_details",
  "id": "business_details"
) do %>

<%= render "govuk_publishing_components/components/title", {
  title: t('coronavirus_form.business_details.title'),
} %>

<%= render "govuk_publishing_components/components/input", {
  name: "company_name",
  label: {
    text: t('coronavirus_form.business_details.company_name.label'),
  },
  error_message: error_items('company_name'),
} %>

<%= render "govuk_publishing_components/components/input", {
  name: "company_number",
  label: {
    text: t('coronavirus_form.business_details.company_number.label'),
  },
  error_message: error_items('company_number'),
} %>

<%= render "govuk_publishing_components/components/radio", {
  heading: t('coronavirus_form.business_details.company_size.label'),
  name: "company_size",
  error_message: error_items('company_size'),
  items: t('coronavirus_form.business_details.company_size.options').map do |_, item|
    {
      value:  item[:label],
      text:  item[:label],
      checked: session.dig(:business_details, :company_size) == item[:label],
    }
  end
} %>

<%= render "govuk_publishing_components/components/radio", {
  heading: t('coronavirus_form.business_details.company_location.label'),
  name: "company_location",
  error_message: error_items('company_location'),
  items: t('coronavirus_form.business_details.company_location.options').map do |_, item|
    {
      value:  item[:label],
      text:  item[:label],
      checked: session.dig(:business_details, :company_location) == item[:label],
    }
  end
} %>

<%= render "govuk_publishing_components/components/button", text: "Save and continue", margin_bottom: true %>
<% end %>
